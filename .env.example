# =============================================================================
# AI Financial Advisor - Environment Configuration
# =============================================================================
# USAGE:
# 1. Edit GEMINI_API_KEY below with your actual key
# 2. Run: source .env.example && iex -S mix phx.server
# =============================================================================

# Gemini API Key (FREE - get from https://makersuite.google.com/app/apikey)
export GEMINI_API_KEY="your-gemini-api-key-here"

export ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# LLM Configuration
export LLM_PROVIDER="gemini"
export GEMINI_MODEL="gemini-2.5-flash"
export GEMINI_EMBEDDING_MODEL="text-embedding-004"
export ANTHROPIC_MODEL="claude-3-5-sonnet-20241022"

# Feature Flags
export ENABLE_RAG="true"
export ENABLE_BACKGROUND_SYNC="false"
export ENABLE_WEBHOOKS="false"

# Google OAuth (required for Gmail/Calendar access)
# Get from: https://console.cloud.google.com/apis/credentials
export GOOGLE_CLIENT_ID="your-google-client-id"
export GOOGLE_CLIENT_SECRET="your-google-client-secret"
export GOOGLE_REDIRECT_URI="http://localhost:4000/auth/google/callback"

# HubSpot OAuth (required for CRM access)
# Get from: https://developers.hubspot.com/
export HUBSPOT_CLIENT_ID="your-hubspot-client-id"
export HUBSPOT_CLIENT_SECRET="your-hubspot-client-secret"
export HUBSPOT_REDIRECT_URI="http://localhost:4000/auth/hubspot/callback"
